{
  "name": "iobroker.pylontech",
  "version": "0.0.3",
  "description": "Query the cell voltages and the status of pylontech batteries via the console",
  "author": {
    "name": "PLCHome",
    "email": "GitHub@traeger-welt.de"
  },
  "homepage": "https://github.com/PLCHome/ioBroker.pylontech",
  "license": "MIT",
  "keywords": [
    "battery",
    "pylontech",
    "photovoltaics",
    "inverter",
    "energy storage system",
    "growatt",
    "victron"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PLCHome/ioBroker.pylontech.git"
  },
  "engines": {
    "node": ">= 16"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.3",
    "debug": "^4.3.4",
    "net": "^1.0.2",
    "serialport": "^12.0.0",
    "stream": "^0.0.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.6.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.6.0",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@alcalzone/release-script-plugin-manual-review": "^3.5.9",
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/testing": "^4.1.0",
    "@tsconfig/node14": "^14.1.0",
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7.1.6",
    "@types/debug": "^4.1.9",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.0",
    "@types/proxyquire": "^1.3.29",
    "@types/sinon": "^10.0.17",
    "@types/sinon-chai": "^3.2.10",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.5",
    "sinon": "^16.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "main": "build/pylontechMain.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "media/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/PLCHome/ioBroker.pylontech/issues"
  },
  "readmeFilename": "README.md"
}
